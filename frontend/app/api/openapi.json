          "areaCode": {
            "type": "string"
          },
          "telephoneNumber": {
            "type": "string"
          },
          "street": {
            "type": "string"
          },
          "zip": {
            "$ref": "#/components/schemas/Zip"
          },
          "salesLastYear": {
            "type": "number"
          },
          "salesYearToDate": {
            "type": "number"
          },
          "collectionArtistId": {
            "$ref": "#/components/schemas/Artist"
          },
          "collectionMedium": {
            "type": "string"
          },
          "collectionStyle": {
            "type": "string"
          },
          "collectionType": {
            "type": "string"
          }
        },
        "required": [
          "firstName",
          "lastName",
          "socialSecurityNumber"
        ]
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "description": "Enter JWT token in the format: Bearer {token}",
        "name": "bearerAuth",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
